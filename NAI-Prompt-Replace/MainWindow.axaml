<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:naiPromptReplace="clr-namespace:NAI_Prompt_Replace"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        Width="800" Height="450"
        x:Class="NAI_Prompt_Replace.MainWindow"
        x:DataType="naiPromptReplace:Config"
        Closing="Window_OnClosing"
        Title="NAI Prompt Replace">
    <Panel Margin="20">
        <Grid RowDefinitions="Auto,Auto,1*,1*,2.5*,Auto,1*" ColumnDefinitions="Auto, 5*">
            <TextBlock Text="Token" VerticalAlignment="Center" />
            <TextBox Grid.Row="0" Grid.Column="1" PasswordChar="*" Text="{Binding AccessToken}" />
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Prompt" VerticalAlignment="Center" />
            <TextBox Grid.Row="1" Grid.Column="1" Height="100" TextWrapping="Wrap" AcceptsReturn="True" Text="{Binding Prompt}" />
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Negative" VerticalAlignment="Center" />
            <TextBox Grid.Row="2" Grid.Column="1" TextWrapping="Wrap" Text="{Binding GenerationConfig.NegativePrompt}" />
            <TextBlock Grid.Row="3" Grid.Column="0" Text="Replace" VerticalAlignment="Center" />
            <TextBox Grid.Row="3" Grid.Column="1" TextWrapping="Wrap" Text="{Binding Replace}" />
            <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Vertical" Spacing="5" Margin="10">
                <StackPanel Orientation="Horizontal" Spacing="5">
                    <CheckBox Content="Smea" IsChecked="{Binding GenerationConfig.Smea}" />
                    <CheckBox Content="Dyn" IsChecked="{Binding GenerationConfig.Dyn}" />
                    <StackPanel Orientation="Horizontal" Spacing="5" Height="20">
                        <TextBlock Text="Width" VerticalAlignment="Center"></TextBlock>
                        <NumericUpDown Value="{Binding GenerationConfig.Width}" Minimum="1" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="5" Height="20">
                        <TextBlock Text="Height" VerticalAlignment="Center"></TextBlock>
                        <NumericUpDown Value="{Binding GenerationConfig.Height}" Minimum="1" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="5" Height="20">
                        <TextBlock Text="Seed" VerticalAlignment="Center"></TextBlock>
                        <NumericUpDown Value="{Binding GenerationConfig.Seed}" MinWidth="200" />
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="5">
                    <StackPanel Orientation="Horizontal" Spacing="5" Height="20">
                        <TextBlock Text="Sampler" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                        <ComboBox Name="SamplerComboBox"  MinWidth="150">
                            <ComboBoxItem Content="Euler"></ComboBoxItem>
                            <ComboBoxItem Content="Euler Ancestral"></ComboBoxItem>
                            <ComboBoxItem Content="DPM++ 2S Ancestral"></ComboBoxItem>
                            <ComboBoxItem Content="DPM++ 2M"></ComboBoxItem>
                            <ComboBoxItem Content="DPM++ SDE"></ComboBoxItem>
                            <ComboBoxItem Content="DDIM"></ComboBoxItem>
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="5" Height="20">
                        <TextBlock Text="Model" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                        <ComboBox Name="ModelComboBox" MinWidth="120"></ComboBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="5" Height="20">
                        <TextBlock Text="Steps" VerticalAlignment="Center"></TextBlock>
                        <NumericUpDown Value="{Binding GenerationConfig.Steps}" Minimum="1" Maximum="50"></NumericUpDown>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="5" Height="20">
                        <TextBlock Text="Scale" VerticalAlignment="Center"></TextBlock>
                        <NumericUpDown Value="{Binding GenerationConfig.Scale}" Increment="0.1" Minimum="0" Maximum="10"></NumericUpDown>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
            <Button Grid.Row="5" Grid.Column="0" Name="RunButton" Click="RunButton_OnClick" Content="Run" Width="60" HorizontalContentAlignment="Center" VerticalAlignment="Center">
            </Button>
            <TextBox Grid.Row="5" Grid.Column="1" Name="LogTextBox" IsReadOnly="True" VerticalAlignment="Center" Height="100" TextWrapping="Wrap">
            </TextBox>
        </Grid>
    </Panel>
</Window>